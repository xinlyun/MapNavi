<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="108px">

    <ImageView
        android:background="@color/gray_btn_bg_color"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="33px"
        android:layout_width="42px"
        android:src="@drawable/icon_add"
        android:layout_height="42px" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="88px"

        android:background="@color/gray_btn_bg_pressed_color"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout

        android:layout_marginRight="300px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_marginTop="10px"
            android:src="@drawable/icon_search_marker"
            android:layout_width="88px"
            android:layout_height="88px" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="11111111"
                android:id="@+id/pre_list_name"
                android:textColor="@color/first_text_color"
                android:textSize="28px"
                android:layout_marginTop="28px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:text="adfadf"
                android:id="@+id/pre_list_posi"
                android:textColor="@color/gray_btn_bg_pressed_color"
                android:textSize="24px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>