<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="90px">

    <ImageView
        android:background="@color/gray_btn_bg_color"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="33px"
        android:layout_width="42px"
        android:src="@drawable/icon_add"
        android:layout_height="42px" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="72px"

        android:background="@color/gray_btn_bg_pressed_color"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout

        android:layout_marginRight="300px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_marginLeft="12px"
            android:src="@drawable/icon_search_marker"
            android:layout_width="48px"
            android:layout_height="48px" />
        <LinearLayout
            android:layout_marginLeft="12px"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:text="11111111"
                android:id="@+id/pre_list_name"
                android:singleLine="true"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/list_title"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/two_top_marage"
                android:singleLine="true"
                android:text="adfadf"
                android:id="@+id/pre_list_posi"
                android:textColor="@color/gray_btn_bg_pressed_color"
                android:textSize="@dimen/list_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>