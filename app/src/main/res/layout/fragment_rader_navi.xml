<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.xiaopeng.xmapnavi.view.appwidget.selfview.MapFloatView
        android:id="@+id/mfv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_marginTop="8px"
            android:background="@drawable/shadowss"
            android:layout_marginLeft="10px"
            android:paddingTop="4px"
            android:paddingBottom="14px"
            android:paddingLeft="9px"
            android:paddingRight="9px"
            android:layout_marginRight="10px"
            android:layout_width="match_parent"
            android:layout_height="126px">
            <LinearLayout
                android:background="@color/black_p50"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:gravity="center"
                    android:id="@+id/btn_exit"
                    android:textColor="@color/white"
                    android:text="X"
                    android:textSize="50px"
                    android:layout_width="100px"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:background="@color/gray_btn_bg_pressed_color"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@color/white"
                    android:textSize="45px"
                    android:text=""
                    android:id="@+id/tv_show_msg"
                    android:gravity="center"

                    android:layout_width="772px"
                    android:layout_height="match_parent" />
                <Button
                    android:background="@color/black"
                    android:id="@+id/btn_start_navi"
                    android:textColor="@color/white"
                    android:text="导航"
                    android:textSize="45px"
                    android:layout_width="168px"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3px"
        android:layout_marginBottom="@dimen/bottom_first"
        android:paddingTop="4px"
        android:paddingBottom="14px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:background="@drawable/shadowss"
        android:layout_width="106px"
        android:layout_height="106px">
        <Button
            android:id="@+id/btn_see_all"
            android:text="全览"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <FrameLayout
        android:background="@drawable/shadowss"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/bottom_first"
        android:layout_marginRight="2px"
        android:layout_width="108px"
        android:paddingTop="4px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:paddingBottom="14px"
        android:layout_height="196px">
        <LinearLayout
            android:background="@drawable/white_backgrouad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:background="@drawable/transparent"
                android:id="@+id/btn_zoom_plus"
                android:text="+"
                android:textSize="45px"
                android:textColor="@color/black"
                android:layout_width="94px"
                android:layout_height="94px" />
            <ImageView
                android:background="@color/gray_btn_bg_color"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <Button
                android:textColor="@color/black"
                android:text="--"
                android:textSize="45px"
                android:background="@drawable/transparent"
                android:id="@+id/btn_zoom_jian"
                android:layout_width="94px"
                android:layout_height="94px" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
