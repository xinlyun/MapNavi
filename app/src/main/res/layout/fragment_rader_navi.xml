<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.xiaopeng.xmapnavi.view.appwidget.selfview.MapFloatView
        android:id="@+id/mfv_show"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_marginTop="8px"
            android:background="@drawable/shadowss"
            android:layout_marginLeft="10px"
            android:paddingTop="4px"
            android:paddingBottom="14px"
            android:paddingLeft="9px"
            android:paddingRight="9px"
            android:layout_marginRight="10px"
            android:layout_width="match_parent"
            android:layout_height="126px">
            <RelativeLayout
                android:padding="1px"
                android:background="@drawable/black_50_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:gravity="center"
                        android:id="@+id/btn_exit"
                        android:src="@drawable/icon_x"
                        android:textSize="35px"
                        android:layout_width="88px"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_marginTop="34px"
                        android:layout_marginBottom="34px"
                        android:background="@color/gray_btn_bg_pressed_color"
                        android:layout_width="1px"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_marginLeft="20px"
                        android:singleLine="true"
                        android:textColor="@color/a3a3a3"
                        android:textSize="24px"
                        android:text=""
                        android:id="@+id/tv_show_msg"
                        android:gravity="left|bottom"

                        android:layout_width="370px"
                        android:layout_height="28px" />
                    <TextView

                        android:id="@+id/tv_show_shengyu"
                        android:textColor="@color/white"
                        android:textSize="28px"
                        android:text="剩余1小时36分钟 25.6公里"
                        android:gravity="center|right"
                        android:layout_marginRight="192px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:layout_marginRight="168px"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_help"
                    android:layout_width="88px"
                    android:layout_height="108px" />
                <ImageView
                    android:visibility="gone"
                    android:background="@color/gray_btn_bg_pressed_color"
                    android:layout_marginTop="34px"
                    android:layout_marginBottom="34px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="256px"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:background="#242424"
                    android:layout_alignParentRight="true"
                    android:layout_width="168px"
                    android:id="@+id/btn_start_navi"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/icon_return_navi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_marginBottom="12px"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"
                        android:text="@string/navi"
                        android:gravity="center"
                        android:textSize="24px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

        </FrameLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3px"
        android:layout_marginBottom="@dimen/bottom_first"
        android:paddingTop="4px"
        android:paddingBottom="14px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:background="@drawable/shadowss"
        android:layout_width="106px"
        android:layout_height="106px">
        <ImageView
            android:id="@+id/btn_see_all"
            android:background="@drawable/white_backgrouad"
            android:src="@drawable/icon_locationing"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:background="@drawable/shadowss"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/second_bottom"
        android:layout_marginRight="2px"
        android:layout_width="108px"
        android:paddingTop="4px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:paddingBottom="14px"
        android:layout_height="126px">
        <LinearLayout
            android:id="@+id/btn_lukuang"
            android:padding="1px"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/white_backgrouad"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_lukuang"
                android:src="@drawable/icon_lukuang_02"
                android:layout_width="match_parent"
                android:layout_height="72px" />
            <TextView
                android:background="@drawable/text_trans_bg"
                android:textSize="22px"
                android:gravity="center"
                android:textColor="@color/first_text_color"
                android:text="@string/lukuagg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:background="@drawable/shadowss"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/bottom_first"
        android:layout_marginRight="2px"
        android:layout_width="108px"
        android:paddingTop="4px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:paddingBottom="14px"
        android:layout_height="196px">
        <LinearLayout
            android:background="@drawable/white_backgrouad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1px"
            android:orientation="vertical"
            >
            <ImageView
                android:background="@drawable/transparent"
                android:id="@+id/btn_zoom_plus"
                android:src="@drawable/icon_zoom_plus"

                android:textColor="@color/black"
                android:layout_width="88px"
                android:layout_height="88px" />
            <ImageView
                android:background="@color/gray_btn_bg_color"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <ImageView
                android:textColor="@color/black"

                android:background="@drawable/transparent"
                android:src="@drawable/icon_zoom_small"
                android:id="@+id/btn_zoom_jian"
                android:layout_width="88px"
                android:layout_height="88px" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
