<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="80px"

    android:orientation="horizontal"
    android:layout_marginLeft="100px"
    android:background="@drawable/navistart_down_llayout3_bg"
    android:id="@+id/layout_down"
    android:layout_width="880px"
    android:layout_height="340px">
    <Button
        android:id="@+id/btn_exit_show"
        android:text="@string/exit"
        android:layout_width="150px"
        android:layout_height="150px" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="580px"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_poi_name"
            android:textColor="@color/black"
            android:textSize="38px"
            android:singleLine="true"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/trans_black"
            android:singleLine="true"
            android:id="@+id/tv_poi_str"
            android:textSize="32px"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="32px"
            android:textColor="@color/trans_black"
            android:id="@+id/tv_poi_dis"
            android:gravity="center"
            android:singleLine="true"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:text="@string/calue_navi"
            android:textSize="32px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:textColor="@color/trans_black"
            android:id="@+id/btn_begin_navi"
            android:gravity="center"
            android:singleLine="true"
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="150px"
        android:layout_height="150px">
        <Button
            android:visibility="gone"
            android:text="@string/around"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:text="@string/shouchang"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>