<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="@color/grey_bg_color_92"

    android:layout_width="320px"

    android:paddingLeft="30px"
    android:minHeight="90px"

    android:layout_height="90px">
    <RelativeLayout
        android:layout_marginTop="1px"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_begin_add_way"
        android:layout_width="88px"
        android:layout_height="88px">
        <ImageView

            android:textColor="@color/white"
            android:src="@drawable/icon_white_way_poi"
            android:textSize="25px"
            android:background="@color/blue_0"

            android:layout_width="88px"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginBottom="10px"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:text="@string/way_poi_dian"
            android:textSize="22px"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_toLeftOf="@id/btn_begin_add_way"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:minHeight="90px"
        android:layout_height="90px">
        <TextView
            android:id="@+id/tv_stub_name"
            android:textColor="@color/first_text_color"
            android:textSize="20px"
            android:textStyle="bold"

            android:text="华南师范大学石牌桥大学城广工"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_stub_dis"
                android:textColor="@color/text_blue"
                android:textSize="18px"
                android:text="3.2公里"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_stub_msg"
                android:singleLine="true"
                android:text="空闲：快1/慢6"
                android:textSize="18px"
                android:layout_marginLeft="14px"
                android:textColor="@color/a3a3a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>