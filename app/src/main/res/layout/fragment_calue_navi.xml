<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:paddingBottom="0px"
        android:layout_marginLeft="3px"
        android:layout_marginRight="3px"
        android:paddingTop="5px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadowss"
        android:layout_width="match_parent"
        android:layout_height="305px">
        <!--<include layout="@layout/layout_title_v1"/>-->
        <LinearLayout

            android:background="@drawable/white_backgrouad"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="170px">
                <Button
                    android:id="@+id/btn_exit"
                    android:background="@drawable/icon_return"
                    android:layout_width="88px"
                    android:layout_height="72px" />
                <GridView

                    android:layout_marginTop="12px"
                    android:background="@color/trans_half_white"
                    android:id="@+id/gv_show_an"
                    android:numColumns="auto_fit"
                    android:columnWidth="322px"
                    android:layout_width="888px"
                    android:layout_height="150px">

                </GridView>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40px">

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--<LinearLayout-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/linl_show_an"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent">-->

                    <!--</LinearLayout>-->

                    <TextView

                        android:layout_marginRight="88px"
                        android:textColor="@color/a3a3a3"
                        android:layout_marginLeft="88px"
                        android:textSize="22px"
                        android:gravity="center"
                        android:id="@+id/tv_show_msg"
                        android:layout_weight="2"
                        android:background="@drawable/img_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="70px" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80px">
                <LinearLayout
                    android:background="@drawable/text_trans_bg"
                    android:id="@+id/btn_start_navi"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/icon_navi_black"
                        android:layout_marginLeft="158px"
                        android:layout_width="72px"
                        android:layout_height="72px" />
                    <TextView
                        android:gravity="left|center_vertical"
                        android:textColor="@color/first_text_color"
                        android:textSize="30px"

                        android:text="导航"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_div"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:background="@color/gray_btn_bg_pressed_color"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/text_trans_bg"
                    android:id="@+id/btn_start_route_navi"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:src="@drawable/icon_navi_blue"
                        android:layout_marginLeft="158px"
                        android:layout_width="72px"
                        android:layout_height="72px"
                        android:id="@+id/imageView" />

                    <TextView
                        android:gravity="left|center_vertical"
                        android:textSize="30px"
                        android:textColor="@color/text_blue"
                        android:text="轻导航"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout

        android:background="@drawable/shadowss"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="315px"
        android:layout_marginRight="3px"
        android:layout_width="106px"
        android:paddingTop="4px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:paddingBottom="14px"
        android:layout_height="196px">
        <LinearLayout
            android:background="@drawable/white_backgrouad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:background="@drawable/text_trans_bg"
                android:src="@drawable/icon_zoom_plus"
                android:id="@+id/btn_zoom_plus"

                android:textSize="45px"
                android:textColor="@color/black"
                android:layout_width="88px"
                android:layout_height="88px" />
            <ImageView
                android:background="@color/gray_btn_bg_color"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <ImageView
                android:background="@drawable/text_trans_bg"
                android:textSize="45px"
                android:src="@drawable/icon_zoom_small"
                android:id="@+id/btn_zoom_jian"
                android:layout_width="88px"
                android:layout_height="88px" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:background="@drawable/shadowss"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="546px"
        android:layout_width="108px"
        android:layout_height="343px"
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:paddingTop="4px"
        android:paddingBottom="14px"
        >
        <LinearLayout
            android:background="@drawable/white_backgrouad"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/btn_pianhao"
                android:background="@drawable/text_trans_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="106px">
                <ImageView
                    android:src="@drawable/icon_like"
                    android:layout_width="match_parent"
                    android:layout_height="72px" />
                <TextView

                    android:textSize="22px"
                    android:gravity="center_horizontal"
                    android:textColor="@color/first_text_color"
                    android:text="@string/pianhao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <ImageView
                android:background="@color/gray_btn_bg_color"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <LinearLayout
                android:id="@+id/btn_add_way_poi"
                android:background="@drawable/text_trans_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="106px">
                <ImageView
                    android:src="@drawable/icon_way_poi_small"
                    android:layout_width="match_parent"
                    android:layout_height="72px" />
                <TextView
                    android:textSize="22px"
                    android:gravity="center_horizontal"
                    android:textColor="@color/first_text_color"
                    android:text="@string/way_poi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <ImageView
                android:background="@color/gray_btn_bg_color"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <LinearLayout
                android:id="@+id/btn_lukuang"
                android:background="@drawable/text_trans_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_lukuang_icon"
                    android:src="@drawable/icon_lukuang_01"
                    android:layout_width="match_parent"
                    android:layout_height="72px" />
                <TextView
                    android:textSize="22px"
                    android:gravity="center_horizontal"
                    android:textColor="@color/first_text_color"
                    android:text="@string/lukuagg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_marginRight="128px"
        android:layout_marginBottom="330px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_bilici"
        android:layout_width="94px"
        android:layout_height="14px" />
    <TextView
        android:id="@+id/tx_bilici"
        android:gravity="center|bottom"
        android:textSize="24px"
        android:text="5公里"
        android:textColor="@color/first_text_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="128px"
        android:layout_marginBottom="340px"
        android:layout_width="94px"
        android:layout_height="wrap_content" />
</RelativeLayout>