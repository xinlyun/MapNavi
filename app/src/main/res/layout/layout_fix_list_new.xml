<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1056px"
    android:layout_height="90px">
    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/back_ll"
        android:minHeight="90px"
        android:layout_height="89px">

        <LinearLayout
            android:layout_marginLeft="40px"
            android:orientation="vertical"
            android:layout_width="729px"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:singleLine="true"
                android:text="1.广州大学城体育中心"
                android:textColor="@color/first_text_color"
                android:id="@+id/pre_list_name"

                android:textSize="@dimen/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="体育馆"
                android:layout_marginLeft="14px"
                android:singleLine="true"
                android:layout_marginTop="@dimen/two_top_marage"
                android:textColor="@color/a3a3a3"
                android:textSize="@dimen/list_msg"
                android:id="@+id/pre_list_posi"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout



            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="20px"
                android:id="@+id/touch_to_navi"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_collect_2"
                android:layout_marginLeft="8px"
                android:layout_marginTop="21px"
                android:layout_width="48px"
                android:layout_height="48px" />
            <TextView
                android:id="@+id/pre_list_dis"
                android:layout_marginRight="88px"
                android:textColor="@color/a3a3a3"
                android:textSize="24px"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>


