<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="880px"
    android:paddingLeft="220px"
    android:paddingRight="220px"
    android:layout_height="150px">
    <ImageView
        android:id="@+id/img_bg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout

        android:orientation="vertical" android:layout_width="match_parent"

        android:layout_height="150px">
        <TextView
            android:textSize="22px"
            android:layout_marginTop="18px"
            android:textColor="@color/a3a3a3"
            android:id="@+id/tv_type_show"
            android:gravity="center"
            android:text="用时最少"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="40分钟"
            android:layout_marginTop="2px"
            android:textSize="34px"
            android:textColor="@color/black"
            android:id="@+id/tv_msg_show"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="30公里77米"
            android:textSize="22px"
            android:textColor="@color/a3a3a3"
            android:id="@+id/tv_type_show_2"
            android:layout_marginTop="2px"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>